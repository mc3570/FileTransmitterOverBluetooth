<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/SetUpDeviceId"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        android:text="Set up Device"
        >
    </Button>
    
    <Button
        android:id="@+id/QueryPairedDeviceId"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        android:text="Querying paired devices"
        android:layout_below="@id/SetUpDeviceId"
        >
    </Button>
    
     <Button
        android:id="@+id/DiscoverDeviceId"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        android:text="Discover devices"
        android:layout_below="@id/QueryPairedDeviceId"
        >
    </Button>

</RelativeLayout>
